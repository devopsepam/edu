#!/bin/sh
umask 077

answers() {
	echo --
	echo Nottingham
	echo Nottinghamshire
	echo Jamescoyle.net
	echo IT
	echo localhost.localdomain
	echo root@localhost.localdomain
}

if [ $# -eq 0 ] ; then
	echo $"Usage: `basename $0` filename [...]"
	exit 0
fi

for target in $@ ; do
	PEM1=`/bin/mktemp /tmp/opensslkey.XXXXXX`
	PEM2=`/bin/mktemp /tmp/openssl.XXXXXX`
	trap "/usr/bin/rm -f $PEM1 $PEM2" SIGINT
	answers | /usr/bin/openssl req -newkey rsa:2048 -keyout $PEM1 -nodes -x509 -days 365 -out $PEM2 2> /dev/null
	/usr/bin/cat $PEM1 >  ${target}
	echo ""   >> ${target}
	/usr/bin/cat $PEM2 >> ${target}
	/usr/bin/rm -f $PEM1 $PEM2
done
